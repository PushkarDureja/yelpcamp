<% include partials/header.ejs%>
<div class = "container mt-4">
		<div class="row">
			<div class = "col-lg-4 abc mb-3 mb-lg-0">
				<div class = "lead">
					<h4>
					YelpCamp
					</h4>
				</div>
				<div class ="list-group">
				<li class  ="list-group-item active">Info 1</li>
				<li class  ="list-group-item">Info 2</li>
				<li class  ="list-group-item">Info 3</li>
				</div>
				<!-- <div>
				MAP
				</div> -->
			</div>
			<div class = "col-lg-8 abc  mb-5 mb-lg-0">
				<div class="card" style="width: 40rem;">
  					<img class="card-img-top" src = <%=found.image%>>
  					<div class="card-body">
						<h5 class = "float-right">$ <%=found.price%>/Night</h5>
   						<h5 class="card-title"><%=found.name%></h5>
    					<p class="card-text"><%=found.description%></p>
						<p> <em>Submitted by <%=found.author.username%></em></p>
						 <%if( currentUser && found.author.id.equals(currentUser._id)){%>
						
						<a class  = "btn btn-md btn-primary" href = "/home/show/<%=found._id%>/edit">Edit</a>
						<form class = "d-inline" action= "/home/<%=found._id%>?_method=DELETE" method ="post">
							<button class = "btn btn-md btn-primary">Delete</button>
						</form>
						<%}%>
  					</div>
				</div>
				<div class="card mt-3" style="width: 40rem;">
  					<div class="card-body">
   						 <h5 class="card-title">Comments</h5>
						<%found.comments.forEach(function(result){%>
   						 <h6 class="card-subtitle mb-2 text-muted"><%=result.author.username%></h6>
    					<p class="card-text"><%=result.text%></p>
						
						
						<div class = "mb-4">
							 <%if( currentUser && result.author.id.equals(currentUser._id)){%>
							<a class ="btn btn-sm btn-primary"href="/home/comment/<%=result._id%>/editComment">Edit Comment</a>
							<form  class  = " d-inline" method="post" action = "/home/comment/<%=result._id%>/deleteComment?								_method=DELETE">
							<button class = "btn btn-sm btn-primary">Delete Comment</button>
							</form>
							<%}%>
						</div>
						
						<%})%>
  					</div>
					<a href ="/home/show/<%=found._id%>/comments/new" class = "btn btn-sm btn-success ml-auto" style="width:30%;">Add Comment</a>
				</div>
			</div>
		</div>	
</div>
<% include partials/footer.ejs%>